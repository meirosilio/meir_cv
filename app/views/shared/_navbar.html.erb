
<!-- Sidebar Holder -->
<nav id="sidebar">

  <% @users.each do |user| %>
      <div class="sidebar-header mt-5">
        <h2><%=user.first_name%> <%= user.last_name%></h2>
        <%= image_tag("profile_image.jpg", class: "img-circular") %>
      </div>

      <hr>


      <legend>-PROFILE-</legend>
      <div class="mx-3">
        <small> <%= user.mission %>  </small>
      </div>
      <hr>

      <legend>-CONTACT-</legend>
      <ul class="contact-information mx-3">
        <small><li> <i class="fa fa-map-marker" aria-hidden="true"></i> <%= user.home_address %></li></small>
        <small><li><i class="fa fa-mobile" aria-hidden="true"></i> <%= user.phone_number %></li></small>
        <small><li><i class="fa fa-envelope-o" aria-hidden="true"></i> <%= user.email_address %></li></small>
      </ul>
      <hr>

      <legend>-Skills-</legend>

      <% @skilles.each do |skill| %>
          <div class="progress mx-3 my-3">
            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%=(skill.level)*10%>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
              <p class="mt-auto"><i> <%= skill.name %> </i></p>
            </div>
          </div>
      <% end %>

  <% end %>
</nav>




